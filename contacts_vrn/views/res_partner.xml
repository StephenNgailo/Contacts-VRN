<odoo>
  <data>

       <!-- Inherit Company Form View to add VRN Number -->
       <record id="company_inherited_form_view" model="ir.ui.view">
           <field name="name">Company Inherited Form View</field>
           <field name="model">res.company</field>
           <field name="inherit_id" ref="base.view_company_form"/>
           <field name="arch" type="xml">

               <xpath expr="/form/sheet/notebook/page/group/group/field[@name='vat']" position="after">
                   <field name="vrn" placeholder = "e.g. 44-001-122"/>
               </xpath>

           </field>
       </record>

      <!-- Inherit Partner Form View to add VRN Number -->
      <record model="ir.ui.view" id="extend_res_partner_form">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr = "//field[@name='vat']" position="after">
                    <field name = "vrn" placeholder="Customer/Supplier VRN"/>
            </xpath>
        </field>
    </record>

      <!-- Inherit Sales Order Form View to add VRN Number -->
        <record id="sale_requester_form_view" model="ir.ui.view">
        <field name="name">sale.requester.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
              <field name="vrn"/>
              <field name="po_no"/>
            </xpath>
        </field>
    </record>

      <!-- Inherit Invoice Form View to add VRN Number -->
      <record id="account_requester_form_view" model="ir.ui.view">
    <field name="name">account.requester.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

         <xpath expr="//field[@name='partner_id']" position="after">
          <field name="vrn" />
          <field name="po_no" placeholder="Purchase Order Number" attrs="{'invisible' : [('type','!=','out_invoice')] }"/>
          <field name="delivery_ids" widget="many2many_tags" attrs="{'invisible' : [('type','!=','out_invoice')] }"/>
        </xpath>
    </field>
</record>

  </data>
</odoo>
